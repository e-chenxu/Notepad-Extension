{
  "name": "Notepad Extension",
  "description": "A simple notepad extension",
  "version": "1.0",
  "manifest_version": 3,
  "background.service_worker": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "100": "images/icon.png"
  },
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  }
}